#!/usr/bin/env node

var path = require('path');
var optimist = require('optimist');
var argv = optimist.usage('Usage: $0 [folder] --mode [loop/random]')
  .default('mode', 'loop')
  .argv;

if (argv._.length < 1) {
  optimist.showHelp();
  return;
}

var folder = path.resolve(argv._[0]);

var IPod = require('../');
var ipod = new IPod([], {
  mode: argv.mode
});

ipod.addFolder(folder, function (err) {
  if (err) {
    console.log(err);
    return;
  }
  // 开始播放
  ipod.play();
});

// 改title
process.title = "ipod";

ipod.on('playing', function (src) {
  console.log('playing %s', src);
});
